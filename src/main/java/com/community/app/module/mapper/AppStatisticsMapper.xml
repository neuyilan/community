<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.community.app.module.dao.AppStatisticsDao" >
	<!-- 返回结构集 -->
	<resultMap id="AppStatisticsResult" type="AppStatistics">
			<result column="statiId" property="statiId" />
			<result column="type" property="type" />
			<result column="typeName" property="typeName" />
			<result column="createTime" property="createTime" />
			<result column="editTime" property="editTime" />
			<result column="editor" property="editor" />
	</resultMap>
	
	<!-- 所有字段 -->
	<sql id="Base_Column_List" >
			statiId,
			type,
			typeName,
			createTime,
			editTime,
			editor
	</sql>
	
	<!-- 所有字段查询条件 -->
	<sql id="Base_Where_Clause">
		<where>
			<trim  suffixOverrides="," >
					<if test="statiId != null and statiId != ''" >
				   		and statiId = #{statiId}
					</if>
					<if test="type != null and type != ''" >
				   		and type = #{type}
					</if>
					<if test="typeName != null and typeName != ''" >
				   		and typeName = #{typeName}
					</if>
					<if test="createTime != null and createTime != ''" >
				   		and createTime = #{createTime}
					</if>
					<if test="editTime != null and editTime != ''" >
				   		and editTime = #{editTime}
					</if>
					<if test="editor != null and editor != ''" >
				   		and editor = #{editor}
					</if>
			</trim>
		</where>
	</sql>
	
	<!-- 根据id查询 AppStatistics -->
	<select id="findById"  resultMap="AppStatisticsResult" parameterType="java.lang.Integer">
		select <include refid="Base_Column_List" /> from app_statistics where statiId = #{id}
	</select>
	
	<!-- 无条件查询所有AppStatistics -->
	<select id="findAll" resultMap="AppStatisticsResult">
		select <include refid="Base_Column_List" /> from app_statistics 
	</select>
	
	<!-- 按Map对象条件查询所有AppStatistics -->
	<select id="findByMap" resultMap="AppStatisticsResult" parameterType="java.util.Map">
		select <include refid="Base_Column_List" /> from app_statistics <include refid="Base_Where_Clause" />
	</select>
	
	<!-- 按VO对象条件查询所有AppStatistics -->
	<select id="findByExample" resultMap="AppStatisticsResult" parameterType="com.community.app.module.vo.AppStatisticsQuery">
		select <include refid="Base_Column_List" /> from app_statistics <include refid="Base_Where_Clause" />
	</select>
	
	<!-- AppStatistics根据搜索条件，搜索分页数据 -->
	<select id="findAllPage" resultMap="AppStatisticsResult" parameterType="Object">
		select <include refid="Base_Column_List" /> from app_statistics  
		<include refid="Base_Where_Clause" />
		<if test="pager.orderCondition != null and pager.orderCondition != ''" >
      	${pager.orderCondition}
	    </if>
	    <if test="pager.mysqlQueryCondition != null and pager.mysqlQueryCondition != ''" >
	    ${pager.mysqlQueryCondition}
	    </if>
	</select>
	
	<!-- AppStatistics列表总数-->
	<select id="selectCount" resultType="java.lang.Integer"  parameterType="Object">
		select count(1) from app_statistics 
		<include refid="Base_Where_Clause" />
	</select>
	
	<!-- AppStatistics保存数据 -->
	<insert id="save" parameterType="AppStatistics">
		<selectKey resultType="java.lang.Integer" order="AFTER" keyProperty="statiId">
			SELECT LAST_INSERT_ID()
  		</selectKey>
		insert into app_statistics(
		
		type,
		typeName,
		createTime,
		editTime,
		editor
		) values(
				#{type},
		#{typeName},
		#{createTime},
		#{editTime},
		#{editor}
		)
	</insert>
	
	<!-- AppStatistics修改数据 -->
	<update id="update" parameterType="AppStatistics">
		update app_statistics 
		<set>
			<if test="type != null and type != ''" >
			type=#{type},
			</if>
			<if test="typeName != null and typeName != ''" >
			typeName=#{typeName},
			</if>
			<if test="createTime != null and createTime != ''" >
			createTime=#{createTime},
			</if>
			<if test="editTime != null and editTime != ''" >
			editTime=#{editTime},
			</if>
			<if test="editor != null and editor != ''" >
			editor=#{editor}
			</if>
		</set> 
		where 
		statiId=#{statiId}
		
		
		
		
		
	</update>
	
	<!-- AppStatistics删除数据 -->
	<delete id="delete" parameterType="java.lang.Integer">
		delete from app_statistics where 
		statiId=#{statiId}
											</delete>
	
</mapper>
	
